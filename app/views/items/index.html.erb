<%= render "shared/header" %>
<div class='main'>

  <%# 画面上部の帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      おすすめのプレゼントをシェアできるアプリ
    </h2>
    <p class='service-explain'>
      Okurimonoは大切な人へのプレゼント候補を探せる
    </p>
    <p class='service-explain'>
      アプリです
    </p>
  </div>
  <%# /画面上部の帯部分  %>

  <%# 商品一覧 %>
  <div class='item-contents'>
    <h2 class='title'>ピックアップカテゴリー</h2>
    <div class="subtitle" >
      新規投稿商品
    </div>
    <ul class='item-lists'>

      <% @items.each do |item| %>
        <li class='list'>
          <%= link_to item_path(item.id) do %>
          <div class='item-img-content'>
            <%= image_tag item.image, class: "item-img" %>
          </div>
          <div class='item-info'>
            <h3 class='item-name'>
              <%= item.name %>
            </h3>
            <div class='item-price'>
              <span><%= item.price %>円<br><%= item.del_charge.name %></span>
              <%# <div class='star-btn'> %>
                <%# <%= image_tag "star.png", class:"star-icon" %> %>
                <%# <span class='star-count'>0</span> %>
              <%# </div> %>
            </div>
          </div>
          <% end %>
        <% end %>
      </li>
      
      <% if @items.blank? %>
        <li class='list'>
          <%= link_to '#' do %>
          <%= image_tag "https://tech-master.s3.amazonaws.com/uploads/curriculums/images/Rails1-4/sample.jpg", class: "item-img" %>
          <div class='item-info'>
            <h3 class='item-name'>
              商品を出品してね！
            </h3>
            <div class='item-price'>
              <span>99999999円<br>(税込み)</span>
              <%# <div class='star-btn'> %>
                <%# <%= image_tag "star.png", class:"star-icon" %> %>
                <%# <span class='star-count'>0</span> %>
              </div>
            </div>
          </div>
          <% end %>
        </li>
      <% end %>
      
    </ul>
  </div>
  <%# /商品一覧 %>
</div>
<%= link_to '投稿する', new_item_path, class: 'purchase-btn' %>
<%= render "shared/footer" %>