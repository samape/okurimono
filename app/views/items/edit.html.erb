<%# cssは商品出品のものを併用しています。
app/assets/stylesheets/items/new.css %>

<div class="items-sell-contents">
  <%= render "shared/second-header" %>
  
  <div class="items-sell-main">
    <h2 class="items-sell-title">シェアする商品の情報を入力</h2>
    
    <%= form_with(model: @item, local: true) do |f| %>

      <%= render 'shared/error_messages', model: f.object %>

      <%# 商品画像 %>
      <div class="img-upload">
        <div class="weight-bold-text">
          商品画像
          <span class="indispensable">必須</span>
        </div>
        <div class="click-upload">
          <p>
            クリックしてファイルをアップロード
          </p>
          <%= f.file_field :image, id:"item-image" %>
        </div>
      </div>
      <%# /商品画像 %>
      <%# 商品名と商品説明 %>
      <div class="new-items">
        <div class="weight-bold-text">
          タイトル
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :title, class:"items-text", id:"item-name", placeholder:"商品名（必須 40文字まで)", maxlength:"40" %>
        <div class="items-explain">
          <div class="weight-bold-text">
            商品の説明
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_area :content, class:"items-text", id:"item-info", placeholder:"商品の説明（必須 1,000文字まで）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。" ,rows:"7" ,maxlength:"1000" %>
        </div>
      </div>
      <%# /商品名と商品説明 %>

      <%# 商品の詳細 %>
      <div class="items-detail">
        <div class="weight-bold-text">投稿詳細</div>
        <div class="form">
          <div class="weight-bold-text">
            価格帯
          <span class="indispensable">必須</span>
          </div>
          <%= f.collection_select(:price_id, Price.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
          <div class="weight-bold-text">
            カテゴリ
            <span class="indispensable">必須</span>
          </div>
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
          <div class="weight-bold-text">
            タグ
            <span class="indispensable">必須</span>
          </div>
          <%# <%= f.collection_select(:status_id, Status.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %> 
          <p>※下記どちらか一方を必ず入力してください。</p>
          <div class="weight-bold-text">
            ショップURL
            <span class="indispensable-opt">どちらか必須</span>
          </div>
          <%= f.text_area :shop_url, class:"items-text", id:"item-tag", placeholder:"オンラインショップもしくは販売店のURLを入力" %>
          <div class="weight-bold-text">
            販売店の住所
            <span class="indispensable-opt">どちらか必須</span>
          </div>
          <%= f.text_area :shop_address, class:"items-text", id:"item-tag", placeholder:"販売店舗がある場合、店舗の住所を入力してください" %>    
        </div>
      </div>
      <%# /商品の詳細 %>

      <%# 下部ボタン %>
      <div class="post-btn-contents">
        <%= f.submit "変更する", class:"post-btn" %>
        <%= link_to 'もどる', item_path(@item), class:"back-btn" %>
      </div>
      <%# /下部ボタン %>
    <% end %>
  </div>

  <%= render "shared/second-footer" %>
</div>